<Window x:Class="RayCaster.MainMenu.AskForName.AskForNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RayCaster.MainMenu.AskForName"
        mc:Ignorable="d"
        Title="AskForNameWindow" Height="130" Width="200"
        WindowStartupLocation="CenterScreen">
    <StackPanel x:Name="stack">
        <Label Content="Enter your name!" HorizontalAlignment="Center" Margin="5"></Label>
        <TextBox Text="{Binding Name}" Margin="10"></TextBox>
        <Button Content="OK" Margin="20, 1" Click="Button_Click"></Button>
    </StackPanel>
</Window>
